{
    "TT IF/END Directive": {
        "prefix": "ttif",
        "body": [
            "[% IF ${1:condition} %]",
            "${2:content}",
            "[% END %]"
        ],
        "description": "IF / END directive using inline tags"
    },
    "TT IF/ELSE/END Directive": {
        "prefix": "ttifel",
        "body": [
            "[% IF ${1:condition} %]",
            "${2:content}",
            "[% ELSE %]",
            "${3:content}",
            "[% END %]"
        ],
        "description": "IF / ELSE / END directive using inline tags"
    },
    "TT FOR/END Directive": {
        "prefix": "ttfor",
        "body": [
            "[% FOR ${1:var} IN ${2:list} %]",
            "${3:content}",
            "[% END %]"
        ],
        "description": "FOR / END directive using inline tags"
    },
    "TT INCLUDE Directive": {
